{
  "manifest_version": 3,
  "name": "Cookie Profile Switcher",
  "version": "1.3.3",
  "description": "Store & manage multiple cookie profiles per domain.",

  "icons": {
    "16":  "cookie.png",
    "48":  "cookie.png",
    "128": "cookie.png"
  },

  "action": {
    "default_icon": "cookie.png",
    "default_popup": "profiles.html"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "cookies",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
